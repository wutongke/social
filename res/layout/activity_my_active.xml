<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/title_activity" />

    <LinearLayout
        android:id="@+id/llMenueTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray"
        android:gravity="center" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:drawableLeft="@drawable/start_wdxx_1"
            android:drawablePadding="5dp"
            android:text="@string/label_setup_active" />
    </LinearLayout>

    <com.cpstudio.zhuojiaren.widget.PullDownView
            android:id="@+id/pull_down_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f9f9f9" />

</LinearLayout>