<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cpstudio.zhuojiaren.QuanBriefActivity" >

    <include  android:id="@+id/quan_bar_title" 
        layout="@layout/title_activity" />

    <include
        android:id="@+id/quan_info_title"
        android:layout_below="@id/quan_bar_title" 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/activity_quan_main_info" />

    <ScrollView
        android:id="@+id/scrollViewGroupInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/lt_menue"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/quan_info_title"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tvLabel"
                    android:layout_width="78dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="@string/label_qzqz"
                    android:textColor="#6a6a6a"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/imageViewCj"
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/tvLabel"
                    android:contentDescription="@string/label_author_header"
                    android:src="@drawable/default_userhead" />

                <TextView
                    android:id="@+id/tvQunzhuName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@+id/imageViewCj"
                    android:text="王丽"
                    android:textColor="#6a6a6a"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/imageViewGuangboMore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/ico"
                    android:src="@drawable/ico_arrow_org" />
            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/ico"
                android:src="@drawable/bg_border3" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tvlb"
                    android:layout_width="78dp"
                    android:layout_height="wrap_content"
                    android:text="@string/label_gonggao"
                    android:textColor="#6a6a6a"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvGonggao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/tvlb"
                    android:lineSpacingExtra="3dp"
                    android:maxLines="2"
                    android:text="sdjaskdasdasdaskfjasfhsdfsdfdsjfhsdajfhjsd我呢吧的阿大声道按时asdasd "
                    android:textColor="#6a6a6a"
                    android:textSize="14sp" />
            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/ico"
                android:src="@drawable/bg_border3" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tvlb2"
                    android:layout_width="78dp"
                    android:layout_height="wrap_content"
                    android:text="@string/label_class"
                    android:textColor="#6a6a6a"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvClass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/tvlb2"
                    android:lineSpacingExtra="3dp"
                    android:maxLines="1"
                    android:text="资源整合圈"
                    android:textColor="#6a6a6a"
                    android:textSize="14sp" />
            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/ico"
                android:src="@drawable/bg_border3" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tvlb3"
                    android:layout_width="78dp"
                    android:layout_height="wrap_content"
                    android:text="@string/label_local"
                    android:textColor="#6a6a6a"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvLocal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/tvlb3"
                    android:lineSpacingExtra="3dp"
                    android:maxLines="1"
                    android:text="资源整合圈"
                    android:textColor="#6a6a6a"
                    android:textSize="14sp" />
            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/ico"
                android:src="@drawable/bg_border3" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tvlb4"
                    android:layout_width="78dp"
                    android:layout_height="wrap_content"
                    android:text="@string/label_brief"
                    android:textColor="#6a6a6a"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvBrief"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/tvlb4"
                    android:lineSpacingExtra="3dp"
                    android:maxLines="1"
                    android:text="资源整合圈"
                    android:textColor="#6a6a6a"
                    android:textSize="14sp" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/lt_menue"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:background="#767475"
        android:gravity="center"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/lt_chengyuan_menue"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal" >

           <Button
                android:id="@+id/btnQuitQuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/collect_hqxq1"
                android:minHeight="20dp"
                android:background="@null"
                android:text="@string/label_quit_quan"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lt_youke_menue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal" >
            <Button
                android:id="@+id/btnJoinQuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/addpeople"
                android:minHeight="20dp"
                 android:background="@null"
                android:text="@string/label_join_quan"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>