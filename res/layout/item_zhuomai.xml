<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:orientation="vertical"
    android:paddingTop="10dp" >

    <ImageView
        android:id="@+id/izm_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:src="@drawable/ico_fan" />

    <TextView
        android:id="@+id/izm_title"
        style="@style/basic_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/izm_image"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:text="asd"
        android:textColor="@color/black"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/izm_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/izm_title"
        android:layout_below="@id/izm_title"
        android:maxLines="2"
        android:text="行业das" />

    <TextView
        android:id="@+id/izm_time"
        style="@style/basic_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="13:00"
        android:textSize="15dp" />

</RelativeLayout>