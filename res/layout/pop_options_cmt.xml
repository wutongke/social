<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_options"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/viewGood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:height="36dp"
        android:text="@string/label_good2"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_border_v"
        android:gravity="center"
        android:height="36dp" />

    <TextView
        android:id="@+id/viewCmt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:height="36dp"
        android:text="@string/label_cmt"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_border_v"
        android:gravity="center"
        android:height="36dp" />

    <TextView
        android:id="@+id/viewCopy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:height="36dp"
        android:text="@string/label_copy"
        android:textColor="#ffffff" />

</LinearLayout>