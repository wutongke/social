<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg"
    tools:context=".PhoneActivity" >
     <include layout="@layout/title_activity" />
	<RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:gravity="center"
	    >
	    <ImageView 
	        android:id="@+id/aq_qq_image"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="@drawable/qq"
	        />
	    <ImageView 
	        android:id="@+id/aq_qq_bang_image"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="@drawable/pictures_selected"
	        android:layout_alignRight="@+id/aq_qq_image"
	        android:layout_alignBottom="@+id/aq_qq_image"
	        />
	</RelativeLayout>
	<TextView 
	    android:id="@+id/aq_qq_number"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:gravity="center_horizontal"
	    android:layout_marginTop="20dp"
	    style="@style/basic_text"
	    android:visibility="gone"
	    android:textColor="@color/black"
	    />
	<TextView 
	    android:id="@+id/aq_qq_des"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="20dp"
	    android:layout_marginLeft="20dp"
	    android:layout_marginRight="20dp"
	    android:text="@string/qq_des"
	    style="@style/basic_second_text"
	    />
	
	<Button 
	    android:id="@+id/out_bang"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="20dp"
	    android:padding="10dp"
	    android:layout_marginLeft="20dp"
	    android:layout_marginRight="20dp"
	    style="@style/basic_text"
	    android:text="@string/update_phone_number"
	    android:textColor="@color/white"
	    android:background="@color/red"
	    />
</LinearLayout>

