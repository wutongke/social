<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <CheckBox
        android:id="@+id/izl_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:enabled="true"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/izl_imageViewAuthorHeader"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:contentDescription="@string/label_author_header"
        android:paddingLeft="10dp"
         />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/izl_name"
            style="@style/basic_text_black"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
             />

        <TextView
            android:id="@+id/izl_mem_count"
            style="@style/basic_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
             />

        <TextView
            android:id="@+id/izl_des"
            style="@style/basic_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
             />
    </LinearLayout>

</LinearLayout>