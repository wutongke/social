<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/graywhitem"
    android:gravity="center"
    android:orientation="vertical" >

    <include layout="@layout/head_pull_all" />
	<ImageView 
	    android:id="@+id/hgm_adv"
	    android:layout_width="match_parent"
	    android:layout_height="100dp"
	    android:scaleType="centerCrop"
	    />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="82dp"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/hgm_grouth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@drawable/checkbox_image" />

        <ImageView
            android:id="@+id/hgm_radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:layout_gravity="center"
            android:src="@drawable/checkbox_image2" />

        <ImageView
            android:id="@+id/hgm_visit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@drawable/checkbox_image3" />
    </LinearLayout>

</LinearLayout>