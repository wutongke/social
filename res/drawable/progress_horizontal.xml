<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="10dp" />

            <gradient
                android:angle="270"
                android:centerColor="#ff878787"
                android:centerY="0.4"
                android:endColor="#ff8d8d8d"
                android:startColor="#ff444444" />

        </shape>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="10dp" />

                <gradient
                    android:angle="270"
                    android:centerColor="#ff1c99c7"
                    android:centerY="0.4"
                    android:endColor="#ff2eb0e1"
                    android:startColor="#ff18719a" />
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="10dp" />

                <gradient
                    android:angle="270"
                    android:centerColor="#ff1c99c7"
                    android:centerY="0.4"
                    android:endColor="#ff2eb0e1"
                    android:startColor="#ff18719a" />
            </shape>
        </clip>
    </item>

</layer-list>